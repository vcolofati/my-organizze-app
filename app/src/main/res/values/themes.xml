<resources
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Organizze" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <!--Tema despesas-->
    <style name="ExpensesTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryExpenses</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkExpenses</item>
        <item name="colorAccent">@color/colorAccentExpenses</item>
        <item name="colorSecondary">@color/colorPrimaryExpenses</item>
        <item name="colorOnSecondary">@android:color/white</item>
    </style>

    <!--Tema receitas-->
    <style name="IncomeTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryIncome</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkIncome</item>
        <item name="colorAccent">@color/colorAccentIncome</item>
        <item name="colorSecondary">@color/colorPrimaryIncome</item>
        <item name="colorOnSecondary">@android:color/white</item>
    </style>

    <style name="textGrey">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="Theme.Organizze.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Organizze.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Organizze.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>