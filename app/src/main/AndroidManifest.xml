<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vcolofati.organizze">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Organizze">
        <activity
            android:name=".activities.IncomeActivity"
            android:theme="@style/IncomeTheme"
            android:exported="false" />
        <activity
            android:name=".activities.ExpensesActivity"
            android:theme="@style/ExpensesTheme"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme.Organizze.NoActionBar" />
        <activity
            android:name=".activities.SigninActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CustomIntroActivity"
            android:exported="true"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>